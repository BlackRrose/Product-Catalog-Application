@model ProductModel

<div class="container mt-5">
    <div class="row">
        <div class="col-md-6">
            <div class="img-container border rounded p-3 bg-white">
                <img src="@Model.Image" class="img-fluid" alt="@Model.Title" />
            </div>
        </div>

        <div class="col-md-6">
            <h2>@Model.Title</h2>
            <p class="text-muted"><strong>Category:</strong> @Model.Category</p>
            <h4 class="text-primary">R @Model.Price</h4>

            <p class="mt-4">@Model.Description</p>

            <a href="@Url.Action("Index", "ProductView")" class="btn btn-outline-secondary"> Back to Products</a>

        </div>
    </div>
</div>


<style>
    .img-container {
        display: flex;
        justify-content: center;
        align-items: center;
    }


    .img-container img {
        max-height: 100%;
        object-fit: contain;
    }

    .img-fluid {
        max-width: 55%;
        height: auto;
    }

</style>