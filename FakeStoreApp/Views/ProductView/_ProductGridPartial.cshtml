@model (IEnumerable<ProductModel> products, int totalCount, int page, int pageSize)

<div class="row">
    @foreach (var product in Model.products)
    {
        <div class="col-md-4 mb-4 d-flex">
            <div class="card h-100 w-100">
                <div class="card-img-top-wrapper">
                    <img src="@product.Image" class="card-img-top" alt="@product.Title" />
                </div>
                <div class="card-body d-flex flex-column">
                    <h4 class="card-title">@product.Title</h4>
                    <p class="card-text mt-auto">R @product.Price</p>
                    <a href="@Url.Action("Details", "ProductView", new { id = product.Id })" class="btn btn-primary">View</a>
                </div>
            </div>
        </div>
    }
</div>

<div class="text-center mt-4">
    @{
        var totalPages = (int)Math.Ceiling((double)Model.totalCount / Model.pageSize);
        for (int i = 1; i <= totalPages; i++)
        {
            <button class="btn btn-outline-primary pagination-btn @(i == Model.page ? "active" : "")" data-asp-page="@i">@i</button>
        }
    }
</div>

<style>
    .card-img-top-wrapper {
        height: 200px;
        overflow: hidden;
        display: flex;
        justify-content: center;
        align-items: center;
    }

    .card-img-top {
        object-fit: cover;
        height: 100%;
        width: auto;
        max-width: 100%;
    }
</style>
